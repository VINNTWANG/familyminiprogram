.container {
  padding: 24rpx;
}

.header {
  margin-bottom: 32rpx;
}

.tip {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 16rpx;
}

.banner-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.banner-item {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.banner-image {
  width: 100%;
  height: 280rpx; /* Maintain aspect ratio */
  display: block;
}

.delete-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 64rpx;
  height: 64rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
