/* Compiled from pages/my/index.less using variable.less tokens */

.my-page-container { background-color: #F2F3F5; min-height: 100vh; }

/* Custom Navbar Placeholder */
.custom-navbar-placeholder { }

/* Header */
.profile-header { position: relative; height: 350rpx; background-color: #E7E8EB; }
.cover-photo { width: 100%; height: 100%; }
.profile-picture-area { position: absolute; bottom: -80rpx; left: 50%; transform: translateX(-50%); }
.profile-picture-border { border-radius: 50%; padding: 8rpx; background-color: #F2F3F5; }

/* User Info */
.user-info-area { background-color: #F2F3F5; padding: 100rpx 32rpx 0 32rpx; text-align: center; }
.user-info-area .nickname-line { display: flex; align-items: center; justify-content: center; gap: 16rpx; }
.user-info-area .nickname { font-size: 40rpx; font-weight: bold; color: #1F2329; }

/* Tab Bar */
.content-tabs { display: flex; justify-content: center; gap: 48rpx; margin: 32rpx 0; padding: 0 32rpx; border-bottom: 1rpx solid #E7E8EB; }
.tab { padding-bottom: 16rpx; font-size: 28rpx; color: #8A9299; position: relative; }
.tab.active { color: #0052D9; font-weight: bold; }
.tab.active::after { content: ''; position: absolute; bottom: -1rpx; left: 0; width: 100%; height: 4rpx; background-color: #0052D9; }

/* Tab Content */
.tab-content { padding: 0 32rpx; }
.posts-container { }

.profile-content-container .info-card { background-color: #fff; border-radius: 24rpx; margin-bottom: 24rpx; padding: 0 32rpx; }
.profile-content-container .info-row { display: flex; align-items: center; justify-content: space-between; padding: 32rpx 0; border-bottom: 1rpx solid #F2F3F5; }
.profile-content-container .info-row:last-child { border-bottom: none; }
.profile-content-container .info-label { font-size: 28rpx; color: #1F2329; }
.profile-content-container .info-value { font-size: 28rpx; color: #8A9299; }
.profile-content-container .info-value-action { display: flex; align-items: center; gap: 8rpx; font-size: 28rpx; color: #8A9299; }
.profile-content-container .status-unverified { color: #ED7B2F; }
.profile-content-container .logout-btn-container { margin-top: 48rpx; }
.profile-content-container .admin-cell .info-label { color: #0052D9; font-weight: bold; }
.profile-content-container .badge { font-size: 22rpx; font-weight: bold; padding: 4rpx 12rpx; border-radius: 8rpx; }

/* Login Prompt */
.login-prompt-container { padding: 100rpx 32rpx; display: flex; flex-direction: column; align-items: center; }
.login-prompt-container .login-title { font-size: 32rpx; font-weight: bold; margin-bottom: 40rpx; }
.login-prompt-container .avatar-wrapper { padding: 0; margin: 0; width: 160rpx; height: 160rpx; border-radius: 50%; overflow: hidden; border: 4rpx solid #eee; }
.login-prompt-container .avatar-wrapper .avatar-image { width: 100%; height: 100%; }
.login-prompt-container .login-tip { font-size: 24rpx; color: #999; margin-top: 16rpx; }
.login-prompt-container .nickname-input { margin-top: 40rpx; border: 1px solid #eee; border-radius: 8rpx; padding: 16rpx; width: 80%; text-align: center; }

