page {
  background-color: #f5f5f5;
}

.photowall-container {
  padding: 16rpx;
}

/* Waterfall container using CSS columns */
.waterfall-container {
  column-count: 2;
  column-gap: 16rpx;
}

/* Card for each photo */
.photo-card {
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #eee;
  /* This prevents items from breaking across columns */
  break-inside: avoid;
  -webkit-column-break-inside: avoid; 
}

.photo-card image {
  width: 100%;
  display: block;
}

/* Other styles */
.list-footer {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

.end-of-list {
  color: #ccc;
}

.empty-state {
  padding-top: 200rpx;
}

/* Skeleton styles */
.skeleton-loading {
  column-count: 2;
  column-gap: 16rpx;
}

.skeleton-item {
  height: 300rpx;
  background-color: #e9e9e9;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  break-inside: avoid;
  -webkit-column-break-inside: avoid;
}

.skeleton-item:nth-child(odd) { height: 400rpx; }