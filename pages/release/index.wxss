page { background: #f7f8fa; }
.page { padding: 16rpx 20rpx 24rpx; }

.release-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.content-input, .upload-section, .voice-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
}

/* Counter inside textarea card */
.content-input { position: relative; }
.char-counter {
  position: absolute;
  right: 16rpx;
  bottom: 12rpx;
  font-size: 24rpx;
  color: #8a9299;
}
.char-counter.over { color: #E34D59; }

.voice-actions { display: flex; gap: 12rpx; align-items: center; }
.voice-duration { color: #8a9299; font-size: 24rpx; }

.btngroup { margin-top: 10rpx; }

/* Publish button polish */
.submit-btn {
  display: inline-block;
  background: #1D9BF0 !important;
  border-color: #1D9BF0 !important;
  color: #ffffff !important;
  min-width: 140rpx;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 24rpx;
}
.submit-btn .btn-icon {
  margin-right: 4rpx;
  vertical-align: middle;
}
.submit-btn.t-button--disabled {
  background: #A8D8FB !important;
  border-color: #A8D8FB !important;
  color: #ffffff !important;
  opacity: 1 !important;
}

/* Counter below textarea */
