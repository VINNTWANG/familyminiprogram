/* Recording HUD */
.recording-hud {
  position: fixed;
  left: 0; right: 0;
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}
.recording-hud .hud-inner {
  background: #ffffff;
  border-radius: 9999rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.12);
  padding: 12rpx 20rpx;
  display: inline-flex;
  align-items: center;
  gap: 16rpx;
}
.recording-hud .mic-pulse {
  width: 40rpx; height: 40rpx; border-radius: 50%;
  background: #E34D59;
  display: flex; align-items: center; justify-content: center;
  animation: pulse 1s ease-in-out infinite;
  color: #fff;
}
.recording-hud .hud-timer { font-size: 26rpx; color: #1f2329; min-width: 160rpx; text-align: center; }
.recording-hud .hud-progress { min-width: 260rpx; }
.recording-hud .hud-progress .bar {
  width: 100%; height: 10rpx;
  background: #f2f3f5; border-radius: 999rpx; overflow: hidden;
}
.recording-hud .hud-progress .fill {
  height: 100%; background: #1D9BF0; width: 0%; transition: width 0.2s ease;
}
.recording-hud .hud-actions { display: inline-flex; gap: 12rpx; }

@keyframes pulse {
  0% { box-shadow: 0 0 0 0 rgba(227,77,89,0.6); }
  70% { box-shadow: 0 0 0 18rpx rgba(227,77,89,0); }
  100% { box-shadow: 0 0 0 0 rgba(227,77,89,0); }
}
