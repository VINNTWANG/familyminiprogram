/* Footer bar layout */
.composer-footer {
  position: sticky;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-top: 1rpx solid #f0f2f5;
  padding: 12rpx 16rpx env(safe-area-inset-bottom) 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  z-index: 10;
}
.composer-footer .actions { display: flex; align-items: center; justify-content: center; gap: 16rpx; width: 100%; text-align: center; }
.composer-footer .btn-wrap { display: flex; width: 100%; justify-content: center; }
.composer-footer .actions .submit-btn { margin: 0 auto; }

/* Hide default add tile to avoid重复入口（用工具栏触发选择） */
.upload-section .t-upload__add { display: none; }

