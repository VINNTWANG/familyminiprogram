<t-navbar title="用户主页" left-arrow />
<view class="container" wx:if="{{userInfo}}">
  <view class="profile-header">
    <!-- Background Image -->
    <image src="{{userInfo.avatarUrl}}" class="profile-bg" mode="aspectFill" />
    <view class="profile-overlay"></view>

    <!-- Content -->
    <view class="profile-content">
      <t-avatar image="{{userInfo.avatarUrl}}" size="120rpx" />
      <view class="nickname">{{userInfo.nickName}}</view>
      <view class="profile-stats">
        <view class="stat-item">
          <text class="stat-value">{{userPosts.length}}</text>
          <text class="stat-label">动态</text>
        </view>
      </view>
    </view>
  </view>

  <view class="posts-section">
    <view class="posts-title">Ta的动态</view>
    <view class="post-list">
      <post-card wx:for="{{userPosts}}" wx:key="_id" post="{{item}}" bind:openDetail="openDetailFromCard" />
    </view>
  </view>
</view>

